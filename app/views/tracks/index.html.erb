<div class="container">
<h1>Tracks</h1>
<% if !flash[:notice].blank? %>
   <div>
      <%= flash[:notice] %>
   </div>
<% end %>

<br>
<button type="button" class ="btn">
<%= link_to "New Track", new_track_path %>
</button>
<br>
<br>

<table class="table table-striped table-bordered" >
   <thead>
      <tr>
         <th>Track</th>
         <th>Updated</th>
         <th>Download Link</th>
         <th>Action</th>
      </tr>
   </thead>
   
   <tbody>
      <% @tracks.each do |track| %>
         
         <tr>
            <td><%= track.name %></td>
            <td><%= track.updated_at %></td>
            <td><%= link_to "Download", track.attachment_url, download: ''%> </td> 
           <td><%= button_to "Delete",  track, method: :delete, form:{ data: { turbo_confirm: "Are you sure?"} } %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
</div>
